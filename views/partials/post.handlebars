<div class="card mb-6">
    <header class="card-header card-header-title post-card-title">
        <div class="column">
            <p>
                <a href="/post/{{id}}"  class="has-text-primary-light is-capitalized is-pulled-left">{{title}} </a>
            </p>
        </div>
        <div class="column">
            <p>
                <a href="/post/{{id}}"  class="has-text-primary-light is-pulled-right">Using: {{leftover}} </a>
            </p>
        </div>
    </header>
    <div class="card-content post-card-body">
        <div class="content has-text-justified">
            {{post_content}}
        </div>
        <div class="is-pulled-center">
            <b>{{user.username}}</b> | 
            <a href="https://twitter.com/{{user.twitter}}"><i class="fab fa-twitter"></i></a> 
            <a href="https://github.com/{{user.github}}"><i class="fab fa-github"></i></a>
            | {{format_date created_at}} | <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
    </div>      
</div>